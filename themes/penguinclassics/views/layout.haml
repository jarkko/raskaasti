!!!
%html{ :lang => "fi" }
  %head
    %meta{ "charset" => "utf-8" }
    - if @description
      %meta{ "name" => "description", "content" => @description }
    - if @keywords
      %meta{ "name" => "keywords", "content" => @keywords }
    %meta{ :name => "verify-v1", :content => "x+lW3LVYYbxDrl5XalxYTfstnsMXROw5HMq7nMAgBTc=" }
    %title= @title
    %link{ :href => "/css/reset.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/css/master.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/skin/jplayer.blue.monday.css", :media => "screen", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "/articles.xml", :rel => "alternate", :type => "application/atom+xml" }
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "/js/jquery.jplayer.min.js", :type => "text/javascript" }
  %body#index
    #header
      %h1
        %a{:href => "/", :title => "home" }
          %span
            =@heading
            %em= no_widow @subtitle
    = yield

    #footer
      .wrapper
        = haml :categories, :layout => false
        %br
        = haml :about, :layout => false
        = haml :feed, :layout => false

        %p
          Powered by
          %a{ :href => "http://effectif.com/nesta" } nesta

    = haml :analytics, :layout => false

